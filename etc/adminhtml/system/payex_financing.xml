<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="payex_financing" translate="label" type="text" sortOrder="103" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[PayEx Financing Invoice]]></label>
        <frontend_model>Magento\Paypal\Block\Adminhtml\System\Config\Fieldset\Payment</frontend_model>
        <fieldset_css>payex-method-payex-financing</fieldset_css>
        <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/payex_financing/active</config_path>
        </field>
        <field id="title" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Title</label>
            <config_path>payment/payex_financing/title</config_path>
        </field>

        <field id="sort_order" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sort Order</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/payex_financing/sort_order</config_path>
        </field>

        <field id="debug" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable test mode</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/payex_financing/debug</config_path>
        </field>

        <field id="accountnumber" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Account Number</label>
            <config_path>payment/payex_financing/accountnumber</config_path>
        </field>

        <field id="encryptionkey" translate="label" type="text" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Encryption Key</label>
            <config_path>payment/payex_financing/encryptionkey</config_path>
        </field>

        <field id="transactiontype" translate="label" type="select" sortOrder="7" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Transaction Type</label>
            <source_model>PayEx\Payments\Model\Config\Source\Operation</source_model>
            <config_path>payment/payex_financing/transactiontype</config_path>
        </field>

        <field id="order_status_authorize" translate="label" type="select" sortOrder="9" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Order status (for authorize)</label>
            <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
            <config_path>payment/payex_financing/order_status_authorize</config_path>
        </field>

        <field id="order_status_capture" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Order status (for capture)</label>
            <source_model>Magento\Sales\Model\Config\Source\Order\Status</source_model>
            <config_path>payment/payex_financing/order_status_capture</config_path>
        </field>

        <field id="language" translate="label" type="select" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Client language</label>
            <source_model>PayEx\Payments\Model\Config\Source\Language</source_model>
            <config_path>payment/payex_financing/language</config_path>
        </field>

        <field id="paymentfee" translate="label" type="text" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Payment fee</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/payex_financing/paymentfee</config_path>
        </field>

        <field id="paymentfee_tax_class" translate="label" type="select" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Tax Class for Payment fee</label>
            <source_model>PayEx\Payments\Model\Config\Source\TaxClass</source_model>
            <config_path>payment/payex_financing/paymentfee_tax_class</config_path>
        </field>

        <field id="replace_illegal" translate="label" type="select" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Replace illegal characters</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/payex_financing/replace_illegal</config_path>
        </field>

        <field id="replacement_char" translate="label" type="text" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enter replacement char</label>
            <config_path>payment/payex_financing/replacement_char</config_path>
        </field>

        <field id="billing_address_required" translate="label" type="select" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Require Billing Address on Checkout page</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/payex_financing/billing_address_required</config_path>
        </field>

        <field id="checkout_field" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable SSN Field for address filling</label>
            <comment>Activate Social Security Number extension on Checkout page.</comment>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/payex_financing/checkout_field</config_path>
        </field>

        <field id="content_tos" translate="label" type="textarea" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Content Terms of Service. HTML allowed.</label>
            <config_path>payment/payex_financing/content_tos</config_path>
        </field>

        <group id="payex_financing_country_specific" translate="label" showInDefault="1" showInWebsite="1" sortOrder="20">
            <label>Country Specific Settings</label>
            <frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
            <field id="allowspecific" translate="label" type="allowspecific" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Payment from Applicable Countries</label>
                <source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
                <config_path>payment/payex_financing/allowspecific</config_path>
            </field>
            <field id="specificcountry" translate="label" type="multiselect" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Payment from Specific Countries</label>
                <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
                <can_be_empty>1</can_be_empty>
                <config_path>payment/payex_financing/specificcountry</config_path>
            </field>
        </group>
    </group>
</include>